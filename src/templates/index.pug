extends layouts/_default
block var
  - metas = {}
  - metas.title = 'Home'
  - metas.url = 'url'
  - metas.image = 'image'
  - metas.site_name = 'Website Template'
  - metas.description = 'Website Template home.'

block append meta
  +meta(metas)
  include mixins/_social-meta-tag
  +socialMetaTag(metas)

block title
  title Home | Website Template

block content
  div.l-contents
    div.l-container.l-container--grid
      main(class="l-contents__main", role="main")
        article.m-article
          header
            h1 Article title
            p: a(href="#anchor-1") Anchor Test

            ul.m-social-button
              li.m-social-button__item
                div(
                  class="fb-like",
                  data-href="./",
                  data-layout="button_count",
                  data-action="like",
                  data-size="small",
                  data-show-faces="true",
                  data-share="true"
                )
              li.m-social-button__item
                a(
                  href="https://twitter.com/share",
                  class="twitter-share-button",
                  data-lang="ja"
                ) ツイート
              li.m-social-button__item
                a(
                  href="https://b.hatena.ne.jp/entry/",
                  class="hatena-bookmark-button",
                  data-hatena-bookmark-layout="basic-counter",
                  title="このエントリーをはてなブックマークに追加"
                ): img(src="https://b.st-hatena.com/images/entry-button/button-only@2x.png", alt="このエントリーをはてなブックマークに追加", width="20", height="20", style="border: none;")
              li.m-social-button__item
                a(
                  data-pocket-label="pocket",
                  data-pocket-count="horizontal",
                  class="pocket-btn",
                  data-lang="en"
                )

          div.m-article__content
            h1 Heading 1
            h2 Heading 2
            h3 Heading 3
            h4 Heading 4
            h5 Heading 5
            h6 Heading 6
            hr
            p Paragraph

          section
            p Text
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p Test
            p#anchor-1 Anchor Text

      include partials/_sidebar
